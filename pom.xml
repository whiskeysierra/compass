        </dependency>
        <dependency>
            <groupId>org.zalando</groupId>
            <artifactId>riptide-httpclient</artifactId>
            <version>${riptide.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.zalando</groupId>
            <artifactId>riptide-stream</artifactId>
            <version>${riptide.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
